{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-py",
          "cmd": "python",
          "args": ["main.py"],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "spawn-py",
          "cmd": "python",
          "args": ["main.py"],
          "sidecar": false
        }
      ]
    }
  ]
}
